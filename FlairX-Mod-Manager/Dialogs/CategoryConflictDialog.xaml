<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="FlairX_Mod_Manager.Dialogs.CategoryConflictDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    PrimaryButtonText="Tak, aktywuj"
    SecondaryButtonText="Anuluj"
    DefaultButton="Secondary">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Warning icon and main message -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7BA;" 
                      Foreground="Orange" FontSize="24" Margin="0,0,10,0" 
                      VerticalAlignment="Top"/>
            <TextBlock x:Name="MainMessageText" 
                       Text="W tej kategorii jest już aktywny mod. Czy na pewno chcesz aktywować kolejny?"
                       TextWrapping="Wrap" 
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       MaxWidth="400"/>
        </StackPanel>

        <!-- Category info -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock x:Name="CategoryLabel" Text="Kategoria:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock x:Name="CategoryNameText" Text="" Foreground="{ThemeResource SystemAccentColor}"/>
        </StackPanel>

        <!-- Active mods list -->
        <StackPanel Grid.Row="2">
            <TextBlock x:Name="ActiveModsLabel" Text="Aktywne mody:" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                <ListView x:Name="ActiveModsList" 
                          SelectionMode="None"
                          IsItemClickEnabled="False"
                          Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column="0" 
                                         Width="8" 
                                         Height="8" 
                                         Fill="{ThemeResource SystemAccentColor}" 
                                         Margin="0,0,10,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding}" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</ContentDialog>
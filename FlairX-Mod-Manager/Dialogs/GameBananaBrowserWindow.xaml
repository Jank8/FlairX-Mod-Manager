<Window
    x:Class="FlairX_Mod_Manager.Dialogs.GameBananaBrowserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Browse GameBanana Mods">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with search and filters -->
        <Grid Grid.Row="0" Padding="16" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title and close button -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8B0;" FontSize="24" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TitleText" Text="Browse GameBanana Mods" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
                <Button x:Name="CloseButton" 
                        Content="&#xE8BB;" 
                        FontFamily="Segoe MDL2 Assets"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right"/>
            </Grid>

            <!-- Search and filters -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <AutoSuggestBox x:Name="SearchBox"
                                Grid.Column="0"
                                PlaceholderText="Search mods..."
                                QueryIcon="Find"
                                QuerySubmitted="SearchBox_QuerySubmitted"
                                TextChanged="SearchBox_TextChanged"
                                Margin="0,0,12,0"/>

                <ComboBox x:Name="SortComboBox"
                          Grid.Column="1"
                          Width="180"
                          Margin="0,0,12,0"
                          SelectionChanged="SortComboBox_SelectionChanged">
                    <ComboBoxItem Content="Most Recent" Tag="date_added" IsSelected="True"/>
                    <ComboBoxItem Content="Last Updated" Tag="date_modified"/>
                    <ComboBoxItem Content="Most Downloaded" Tag="downloads"/>
                    <ComboBoxItem Content="Most Liked" Tag="likes"/>
                    <ComboBoxItem Content="Most Viewed" Tag="views"/>
                </ComboBox>

                <Button x:Name="RefreshButton"
                        Grid.Column="2"
                        Content="&#xE72C;"
                        FontFamily="Segoe MDL2 Assets"
                        Click="RefreshButton_Click"
                        ToolTipService.ToolTip="Refresh"/>
            </Grid>
        </Grid>

        <!-- Mods grid -->
        <ScrollViewer Grid.Row="1" Padding="16">
            <Grid>
                <!-- Loading indicator -->
                <StackPanel x:Name="LoadingPanel" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Spacing="12"
                            Visibility="Collapsed">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Loading mods..." FontSize="14" Opacity="0.7"/>
                </StackPanel>

                <!-- Empty state -->
                <StackPanel x:Name="EmptyPanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12"
                            Visibility="Collapsed">
                    <FontIcon Glyph="&#xE8B0;" FontSize="48" Opacity="0.5"/>
                    <TextBlock x:Name="EmptyText" Text="No mods found" FontSize="16" Opacity="0.7"/>
                </StackPanel>

                <!-- Mods list -->
                <GridView x:Name="ModsGridView"
                          SelectionMode="None"
                          IsItemClickEnabled="True"
                          ItemClick="ModsGridView_ItemClick"
                          Padding="0,0,0,80">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="280" Height="320" 
                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  CornerRadius="8"
                                  Padding="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="180"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Preview image -->
                                <Border Grid.Row="0" 
                                        CornerRadius="4"
                                        Background="{ThemeResource LayerFillColorDefaultBrush}">
                                    <Image x:Name="PreviewImage" 
                                           Stretch="UniformToFill"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>

                                <!-- Mod info -->
                                <StackPanel Grid.Row="1" Margin="0,12,0,0" Spacing="4">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"
                                               MaxLines="2"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding AuthorName}" 
                                               FontSize="12"
                                               Opacity="0.7"/>
                                </StackPanel>

                                <!-- Stats -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <FontIcon Glyph="&#xE896;" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Text="{Binding DownloadCountFormatted}" FontSize="12" Opacity="0.7"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <FontIcon Glyph="&#xE8E1;" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Text="{Binding LikeCountFormatted}" FontSize="12" Opacity="0.7"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
        </ScrollViewer>

        <!-- Pagination -->
        <Grid Grid.Row="2" 
              Padding="16" 
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="12">
                <Button x:Name="PrevPageButton"
                        Content="&#xE76B;"
                        FontFamily="Segoe MDL2 Assets"
                        Click="PrevPageButton_Click"
                        IsEnabled="False"/>
                <TextBlock x:Name="PageText" 
                           Text="Page 1" 
                           VerticalAlignment="Center"
                           MinWidth="80"
                           TextAlignment="Center"/>
                <Button x:Name="NextPageButton"
                        Content="&#xE76C;"
                        FontFamily="Segoe MDL2 Assets"
                        Click="NextPageButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="FlairX_Mod_Manager.Dialogs.ImageCropDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Accept"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary">

    <Grid Width="800" Height="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock x:Name="TitleText" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBlock x:Name="DescriptionText" FontSize="14" Opacity="0.7" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Image Canvas -->
        <Border Grid.Row="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
            <Grid x:Name="ImageContainer" Background="{ThemeResource LayerFillColorDefaultBrush}">
                <Canvas x:Name="ImageCanvas" 
                        PointerPressed="ImageCanvas_PointerPressed"
                        PointerMoved="ImageCanvas_PointerMoved"
                        PointerReleased="ImageCanvas_PointerReleased"
                        Background="Transparent">
                    
                    <!-- Source Image -->
                    <Image x:Name="SourceImage" Stretch="Uniform"/>
                    
                    <!-- Crop Rectangle Overlay -->
                    <Canvas x:Name="CropOverlay">
                        <!-- Dimmed areas outside crop -->
                        <Rectangle x:Name="DimTop" Fill="Black" Opacity="0.5"/>
                        <Rectangle x:Name="DimLeft" Fill="Black" Opacity="0.5"/>
                        <Rectangle x:Name="DimRight" Fill="Black" Opacity="0.5"/>
                        <Rectangle x:Name="DimBottom" Fill="Black" Opacity="0.5"/>
                        
                        <!-- Crop rectangle border -->
                        <Rectangle x:Name="CropRect" 
                                   Stroke="{ThemeResource AccentFillColorDefaultBrush}" 
                                   StrokeThickness="2" 
                                   Fill="Transparent"/>
                        
                        <!-- Corner handles -->
                        <Ellipse x:Name="HandleTopLeft" Width="12" Height="12" Fill="{ThemeResource AccentFillColorDefaultBrush}"/>
                        <Ellipse x:Name="HandleTopRight" Width="12" Height="12" Fill="{ThemeResource AccentFillColorDefaultBrush}"/>
                        <Ellipse x:Name="HandleBottomLeft" Width="12" Height="12" Fill="{ThemeResource AccentFillColorDefaultBrush}"/>
                        <Ellipse x:Name="HandleBottomRight" Width="12" Height="12" Fill="{ThemeResource AccentFillColorDefaultBrush}"/>
                    </Canvas>
                </Canvas>
            </Grid>
        </Border>

        <!-- Info Panel -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0" Spacing="8">
            <TextBlock x:Name="InfoText" FontSize="12" Opacity="0.7" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock x:Name="CropSizeText" FontSize="12" Opacity="0.7"/>
                <TextBlock x:Name="TargetSizeText" FontSize="12" Opacity="0.7"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</ContentDialog>

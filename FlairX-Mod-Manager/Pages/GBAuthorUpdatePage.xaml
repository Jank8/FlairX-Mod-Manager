<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FlairX_Mod_Manager.Pages.GBAuthorUpdatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="24">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*" MaxWidth="1000"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Spacing="0" HorizontalAlignment="Stretch">
            
                <!-- Update Authors Mode Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        
                        <FontIcon Grid.Column="0" Glyph="&#xE753;" FontSize="20" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock x:Name="UpdateAuthorsLabel" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="UpdateAuthorsDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                            <TextBlock x:Name="UpdateAuthorsToggleLabel" VerticalAlignment="Center" Opacity="0.8"/>
                            <ToggleSwitch x:Name="UpdateAuthorsSwitch" IsOn="True" OnContent="" OffContent="" MinWidth="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Smart Update Mode Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        
                        <FontIcon Grid.Column="0" Glyph="&#xE9F3;" FontSize="20" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock x:Name="SmartUpdateLabel" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="SmartUpdateDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                            <TextBlock x:Name="SmartUpdateToggleLabel" VerticalAlignment="Center" Opacity="0.8"/>
                            <ToggleSwitch x:Name="SmartUpdateSwitch" IsOn="False" OnContent="" OffContent="" MinWidth="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Actions Header -->
                <TextBlock x:Name="ActionsHeader" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                
                <!-- Fetch Authors Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <FontIcon Grid.Column="0" Glyph="&#xE753;" FontSize="20" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock x:Name="FetchAuthorsTitle" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="FetchAuthorsDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                            <ProgressBar x:Name="UpdateProgressBar" Width="130" IsIndeterminate="False" Visibility="Collapsed" ShowPaused="False" ShowError="False" Margin="0,0,8,0" />
                            <Button x:Name="UpdateButton" 
                                    MinWidth="80"
                                    Click="UpdateButton_Click"
                                    Style="{StaticResource AccentButtonStyle}">
                                <TextBlock x:Name="UpdateButtonText"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Fetch Dates Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <FontIcon Grid.Column="0" Glyph="&#xE787;" FontSize="20" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock x:Name="FetchDatesTitle" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="FetchDatesDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                            <ProgressBar x:Name="FetchDatesProgressBar" Width="130" IsIndeterminate="False" Visibility="Collapsed" ShowPaused="False" ShowError="False" Margin="0,0,8,0" />
                            <Button x:Name="FetchDatesButton" 
                                    MinWidth="80"
                                    Click="FetchDatesButton_Click">
                                <TextBlock x:Name="FetchDatesButtonText"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Fetch Versions Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <FontIcon Grid.Column="0" Glyph="&#xE895;" FontSize="20" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock x:Name="FetchVersionsTitle" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="FetchVersionsDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                            <ProgressBar x:Name="FetchVersionsProgressBar" Width="130" IsIndeterminate="False" Visibility="Collapsed" ShowPaused="False" ShowError="False" Margin="0,0,8,0" />
                            <Button x:Name="FetchVersionsButton" 
                                    MinWidth="80"
                                    Click="FetchVersionsButton_Click">
                                <TextBlock x:Name="FetchVersionsButtonText"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>

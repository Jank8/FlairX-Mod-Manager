<UserControl
    x:Class="FlairX_Mod_Manager.Pages.GameBananaBrowserUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ctk="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="NoHoverTileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver"/>
                                    <VisualState x:Name="Pressed"/>
                                    <VisualState x:Name="Disabled"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Padding="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Back button (always visible) -->
        <Grid Grid.Row="0" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:Name="BackButton" Width="48" Height="48" Click="BackButton_Click" VerticalAlignment="Center"
                        PointerEntered="BackButton_PointerEntered" PointerExited="BackButton_PointerExited">
                    <FontIcon x:Name="BackIcon" Glyph="&#xE711;" FontSize="20">
                        <FontIcon.RenderTransform>
                            <ScaleTransform x:Name="BackIconScale" ScaleX="1" ScaleY="1"/>
                        </FontIcon.RenderTransform>
                    </FontIcon>
                </Button>
                <TextBlock x:Name="TitleText" Text="Browse GameBanana Mods" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                
                <!-- Version badge (next to title) -->
                <Border x:Name="DetailVersionBadge"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8" 
                        Padding="12,6" 
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                    <TextBlock x:Name="DetailVersionText" FontSize="14" FontWeight="SemiBold"/>
                </Border>
                
                <!-- Installed badge (next to version) -->
                <Border x:Name="DetailInstalledBadge"
                        Background="#CC00AA00" 
                        CornerRadius="8" 
                        Padding="12,6" 
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE73E;" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="DetailInstalledBadgeText" Text="Installed" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Content area -->
        <Grid Grid.Row="1">
            <!-- Main content (mods list) -->
            <Grid x:Name="ModsListGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- Search and filters -->
            <Grid Grid.Row="0" Padding="16">
                <AutoSuggestBox x:Name="SearchBox"
                                PlaceholderText="Search mods..."
                                QueryIcon="Find"
                                QuerySubmitted="SearchBox_QuerySubmitted"
                                TextChanged="SearchBox_TextChanged"/>

            </Grid>
            
            <!-- Connection error notification -->
            <InfoBar x:Name="ConnectionErrorBar"
                     Grid.Row="1"
                     Severity="Error"
                     IsOpen="False"
                     Margin="16,0,16,8"
                     IsClosable="True"
                     Closed="ConnectionErrorBar_Closed">
                <InfoBar.ActionButton>
                    <Button x:Name="RetryButton" 
                            Content="Retry" 
                            Click="RetryButton_Click"/>
                </InfoBar.ActionButton>
            </InfoBar>

        <!-- Mods grid -->
        <ScrollViewer x:Name="ModsScrollViewer" Grid.Row="2" Padding="16">
            <Grid>
                <!-- Loading indicator -->
                <StackPanel x:Name="LoadingPanel" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Spacing="12"
                            Visibility="Collapsed">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Loading mods..." FontSize="14" Opacity="0.7"/>
                </StackPanel>

                <!-- Empty state -->
                <StackPanel x:Name="EmptyPanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12"
                            Visibility="Collapsed">
                    <FontIcon Glyph="&#xE8B0;" FontSize="48" Opacity="0.5"/>
                    <TextBlock x:Name="EmptyText" Text="No mods found" FontSize="16" Opacity="0.7"/>
                </StackPanel>

                <!-- Mods list -->
                <GridView x:Name="ModsGridView"
                          SelectionMode="None"
                          IsItemClickEnabled="False"
                          Padding="0,0,0,80">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource NoHoverTileButtonStyle}"
                                    Margin="12"
                                    Click="ModTile_Click"
                                    Tag="{Binding}"
                                    PointerEntered="ModTile_PointerEntered"
                                    PointerExited="ModTile_PointerExited"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch">
                                <Border x:Name="TileBorder"
                                        CornerRadius="8" 
                                        BorderThickness="1" 
                                        BorderBrush="{ThemeResource TileBorderBrush}">
                                    <Border.Shadow>
                                        <ThemeShadow/>
                                    </Border.Shadow>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Full Image Background -->
                                        <Image Grid.Row="0" Grid.RowSpan="2"
                                               Source="{Binding ImageSource}" 
                                               Stretch="UniformToFill" 
                                               Height="357" 
                                               Width="277"
                                               VerticalAlignment="Stretch"
                                               HorizontalAlignment="Stretch"/>
                                        
                                        <!-- Installed badge -->
                                        <Border Grid.Row="0"
                                                Background="#CC00AA00" 
                                                CornerRadius="4" 
                                                Padding="8,4" 
                                                Margin="8"
                                                HorizontalAlignment="Right" 
                                                VerticalAlignment="Top"
                                                Visibility="{Binding IsInstalledVisibility}">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="White"/>
                                                <TextBlock Text="{Binding InstalledText}" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Description Section -->
                                        <Grid Grid.Row="1"
                                              Height="80" 
                                              Width="277" 
                                              CornerRadius="0,0,8,8">
                                            <Border Background="{ThemeResource TileCaptionAcrylicBrush}" 
                                                    CornerRadius="0,0,8,8" />
                                            <Grid Padding="12,8">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding Name}" 
                                                           FontWeight="Bold" 
                                                           FontSize="14" 
                                                           Foreground="{ThemeResource TileCaptionForeground}" 
                                                           TextTrimming="CharacterEllipsis" 
                                                           TextWrapping="NoWrap"
                                                           MaxLines="1"
                                                           ToolTipService.ToolTip="{Binding Name}"/>
                                                <TextBlock Grid.Row="1"
                                                           Text="{Binding AuthorName}" 
                                                           FontSize="12"
                                                           Foreground="{ThemeResource TileCaptionForeground}"
                                                           Opacity="0.7"
                                                           Margin="0,4,0,0"
                                                           TextTrimming="CharacterEllipsis"/>
                                                
                                                <!-- Stats and dates in bottom -->
                                                <Grid Grid.Row="2" VerticalAlignment="Bottom">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Dates on left -->
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                                        <TextBlock FontSize="10" Foreground="{ThemeResource TileCaptionForeground}" Opacity="0.6">
                                                            <Run Text="ðŸ“…"/>
                                                            <Run Text="{Binding DateAddedFormatted}"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="10" Foreground="{ThemeResource TileCaptionForeground}" Opacity="0.6" Visibility="{Binding HasUpdate}">
                                                            <Run Text="ðŸ”„"/>
                                                            <Run Text="{Binding DateUpdatedFormatted}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    
                                                    <!-- Stats on right -->
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <FontIcon Glyph="&#xE8E1;" FontSize="10" Foreground="{ThemeResource TileCaptionForeground}" Opacity="0.6"/>
                                                            <TextBlock Text="{Binding LikeCountFormatted}" FontSize="10" Foreground="{ThemeResource TileCaptionForeground}" Opacity="0.6"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <FontIcon Glyph="&#xE890;" FontSize="10" Foreground="{ThemeResource TileCaptionForeground}" Opacity="0.6"/>
                                                            <TextBlock Text="{Binding ViewCountFormatted}" FontSize="10" Foreground="{ThemeResource TileCaptionForeground}" Opacity="0.6"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
        </ScrollViewer>

        <!-- Loading more indicator -->
        <Grid Grid.Row="3" 
              Padding="16"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,1,0,0">
            <StackPanel x:Name="LoadingMorePanel"
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="12"
                        Visibility="Collapsed">
                <ProgressRing IsActive="True" Width="24" Height="24"/>
                <TextBlock Text="Loading more mods..." FontSize="14" Opacity="0.7" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
            </Grid>
        
            <!-- Details panel (full view) -->
            <Grid x:Name="DetailsPanel" 
                  Visibility="Collapsed"
                  Padding="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Top section: Image slider + Info -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Image Container with navigation -->
                    <Viewbox Grid.Column="0" MaxWidth="600" MaxHeight="600" Stretch="Uniform" VerticalAlignment="Top">
                        <Grid Width="600" Height="600">
                            <!-- Coordinate field for hover -->
                            <Grid x:Name="DetailImageCoordinateField" 
                                  Width="600" Height="600" 
                                  Background="Transparent"
                                  PointerEntered="DetailImageCoordinateField_PointerEntered"
                                  PointerExited="DetailImageCoordinateField_PointerExited"
                                  PointerMoved="DetailImageCoordinateField_PointerMoved"/>
                            
                            <!-- Content with tilt animation -->
                            <Grid x:Name="DetailImageContentRoot" Margin="0" IsHitTestVisible="False">
                                <Border x:Name="DetailImageBorder" CornerRadius="12" BorderThickness="15" BorderBrush="{ThemeResource TileBorderBrush}">
                                    <Border CornerRadius="8">
                                        <Image x:Name="DetailImage" Stretch="Uniform"/>
                                    </Border>
                                </Border>
                            </Grid>
                            
                            <!-- Previous Button -->
                            <Border x:Name="DetailPrevImageButton" Width="48" Height="48" 
                                    VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                    Margin="20,0,0,20" Visibility="Collapsed"
                                    CornerRadius="12"
                                    Background="{ThemeResource LauncherAcrylicBrush}"
                                    PointerPressed="DetailPrevImageButton_Click"
                                    PointerEntered="DetailImageCoordinateField_PointerEntered"
                                    PointerExited="DetailImageCoordinateField_PointerExited"
                                    PointerMoved="DetailImageCoordinateField_PointerMoved">
                                <FontIcon Glyph="&#xE76B;" FontSize="20" 
                                          Foreground="{ThemeResource ButtonForeground}"/>
                            </Border>
                            
                            <!-- Next Button -->
                            <Border x:Name="DetailNextImageButton" Width="48" Height="48" 
                                    VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                    Margin="0,0,20,20" Visibility="Collapsed"
                                    CornerRadius="12"
                                    Background="{ThemeResource LauncherAcrylicBrush}"
                                    PointerPressed="DetailNextImageButton_Click"
                                    PointerEntered="DetailImageCoordinateField_PointerEntered"
                                    PointerExited="DetailImageCoordinateField_PointerExited"
                                    PointerMoved="DetailImageCoordinateField_PointerMoved">
                                <FontIcon Glyph="&#xE76C;" FontSize="20" 
                                          Foreground="{ThemeResource ButtonForeground}"/>
                            </Border>
                            
                            <!-- Image Counter -->
                            <Border Background="{ThemeResource LauncherAcrylicBrush}" 
                                    CornerRadius="12" Padding="8,4" Margin="0,0,0,20" 
                                    VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                    x:Name="DetailImageCounterBorder" Visibility="Collapsed"
                                    PointerEntered="DetailImageCoordinateField_PointerEntered"
                                    PointerExited="DetailImageCoordinateField_PointerExited"
                                    PointerMoved="DetailImageCoordinateField_PointerMoved">
                                <TextBlock x:Name="DetailImageCounterText" Text="1 / 1" FontSize="12" 
                                           Foreground="{ThemeResource ButtonForeground}"/>
                            </Border>
                        </Grid>
                    </Viewbox>
                    
                    <!-- Right side: Author + Description -->
                    <Grid Grid.Column="2" MaxHeight="600">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Author and Category -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Author (left) -->
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock x:Name="DetailAuthorLabel" Text="Author" FontSize="14" FontWeight="SemiBold" Opacity="0.7"/>
                                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                    <!-- Avatar with hover effect -->
                                    <Border Width="48" Height="48"
                                            CornerRadius="8"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="2"
                                            PointerEntered="AuthorAvatar_PointerEntered"
                                            PointerExited="AuthorAvatar_PointerExited"
                                            Background="Transparent">
                                        <Border.RenderTransform>
                                            <ScaleTransform x:Name="DetailAuthorAvatarScale" 
                                                          ScaleX="1" ScaleY="1"
                                                          CenterX="24" CenterY="24"/>
                                        </Border.RenderTransform>
                                        <Border CornerRadius="6" Margin="2">
                                            <Image x:Name="DetailAuthorAvatar" 
                                                   Stretch="UniformToFill"/>
                                        </Border>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock x:Name="DetailAuthor" FontSize="16" FontWeight="SemiBold"/>
                                        <HyperlinkButton x:Name="DetailAuthorProfileLink" 
                                                        FontSize="12"
                                                        Padding="0"
                                                        Click="DetailAuthorProfileLink_Click">
                                            <TextBlock x:Name="DetailViewProfileText" Text="View Profile"/>
                                        </HyperlinkButton>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Category (right) -->
                            <StackPanel Grid.Column="2" Spacing="8" VerticalAlignment="Top">
                                <TextBlock x:Name="DetailCategoryLabel" Text="Category" FontSize="14" FontWeight="SemiBold" Opacity="0.7"/>
                                <HyperlinkButton x:Name="DetailCategoryLink"
                                                Padding="0"
                                                Click="DetailCategoryLink_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <!-- Category icon -->
                                        <Border Width="48" Height="48"
                                                CornerRadius="8"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="2"
                                                Background="Transparent">
                                            <Border CornerRadius="6" Margin="2">
                                                <Image x:Name="DetailCategoryIcon" 
                                                       Stretch="UniformToFill"/>
                                            </Border>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock x:Name="DetailCategory" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock x:Name="DetailCategoryViewText" 
                                                       Text="View Category"
                                                       FontSize="12"
                                                       Opacity="0.7"/>
                                        </StackPanel>
                                    </StackPanel>
                                </HyperlinkButton>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Description with Markdown -->
                        <StackPanel Grid.Row="1" Spacing="8" Margin="0,16,0,0">
                            <TextBlock x:Name="DetailDescriptionTitle" FontSize="16" FontWeight="SemiBold"/>
                            <ScrollViewer x:Name="DetailDescriptionScrollViewer" 
                                          Height="480" 
                                          VerticalScrollBarVisibility="Auto"
                                          SizeChanged="DetailDescriptionScrollViewer_SizeChanged">
                                <ctk:MarkdownTextBlock x:Name="DetailDescriptionMarkdown"
                                                      Loaded="DetailDescriptionMarkdown_Loaded"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Grid>
                </Grid>
                
                <!-- Bottom section: Files + Buttons -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16">
                        <!-- Files -->
                        <StackPanel Spacing="12">
                            <TextBlock x:Name="DetailFilesTitle" FontSize="16" FontWeight="SemiBold"/>
                            <ListView x:Name="DetailFilesList" 
                                      SelectionMode="None"
                                      MaxHeight="400">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Padding="12,8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Row="0" Text="{Binding FileName}" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                                           TextWrapping="Wrap" 
                                                           Opacity="0.7" 
                                                           FontSize="12"
                                                           Margin="0,4,0,0"
                                                           Visibility="{Binding HasDescription}"/>
                                                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="16" Margin="0,4,0,0">
                                                    <TextBlock FontSize="12" Opacity="0.6">
                                                        <Run Text="{Binding SizeLabel}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding FileSizeFormatted}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Opacity="0.6">
                                                        <Run Text="{Binding DownloadsLabel}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding DownloadCountFormatted}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Opacity="0.6">
                                                        <Run Text="{Binding AddedLabel}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding DateAddedFormatted}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </CheckBox>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                        
                        <!-- Action buttons -->
                        <Grid MaxWidth="600" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Main download button -->
                            <Button x:Name="DetailDownloadButton" 
                                    Grid.Column="0"
                                    Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Click="DetailDownloadButton_Click"
                                    Height="48">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <FontIcon Glyph="&#xE896;" FontSize="16"/>
                                    <TextBlock x:Name="DetailDownloadButtonText" Text="Download and Install" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Open in browser button -->
                            <Button x:Name="DetailOpenBrowserButton" 
                                    Grid.Column="2"
                                    HorizontalAlignment="Stretch"
                                    Click="DetailOpenBrowserButton_Click"
                                    Height="48">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <FontIcon Glyph="&#xE774;" FontSize="16"/>
                                    <TextBlock x:Name="DetailOpenBrowserButtonText" Text="Open in Browser" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- Loading indicator -->
                        <StackPanel x:Name="DetailLoadingPanel" 
                                    HorizontalAlignment="Center" 
                                    Spacing="12"
                                    Visibility="Collapsed">
                            <ProgressRing IsActive="True" Width="48" Height="48"/>
                            <TextBlock Text="Loading details..." FontSize="14" Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

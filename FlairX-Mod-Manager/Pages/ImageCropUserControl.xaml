<UserControl
    x:Class="FlairX_Mod_Manager.Pages.ImageCropUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock x:Name="TitleText" 
                          Text="Crop Image" 
                          FontSize="24" 
                          FontWeight="SemiBold"/>
                <TextBlock x:Name="DescriptionText" 
                          Text="Adjust the crop area for optimal framing" 
                          Opacity="0.7" 
                          Margin="0,4,0,0"/>
            </StackPanel>
            
            <Button Grid.Column="1" 
                   x:Name="CloseButton"
                   Content="&#xE711;" 
                   FontFamily="Segoe MDL2 Assets" 
                   FontSize="16"
                   Width="40" 
                   Height="40"
                   Click="CloseButton_Click"
                   ToolTipService.ToolTip="Close (Esc)"/>
        </Grid>

        <!-- Image Canvas -->
        <Border Grid.Row="1" 
               Margin="20,0" 
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
               BorderThickness="1" 
               CornerRadius="8">
            <Grid x:Name="ImageCanvas" 
                 Background="{ThemeResource LayerFillColorDefaultBrush}"
                 PointerPressed="ImageCanvas_PointerPressed"
                 PointerMoved="ImageCanvas_PointerMoved"
                 PointerReleased="ImageCanvas_PointerReleased">
                
                <!-- Source Image -->
                <Image x:Name="SourceImage" 
                      Stretch="Uniform"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                
                <!-- Dimmed overlay areas -->
                <Canvas x:Name="OverlayCanvas">
                    <Rectangle x:Name="DimTop" Fill="#80000000"/>
                    <Rectangle x:Name="DimLeft" Fill="#80000000"/>
                    <Rectangle x:Name="DimRight" Fill="#80000000"/>
                    <Rectangle x:Name="DimBottom" Fill="#80000000"/>
                    
                    <!-- Crop rectangle -->
                    <Rectangle x:Name="CropRect" 
                              Stroke="White" 
                              StrokeThickness="2" 
                              Fill="Transparent"/>
                    
                    <!-- Corner handles -->
                    <Ellipse x:Name="HandleTopLeft" 
                            Width="12" Height="12" 
                            Fill="White" 
                            Stroke="Black" 
                            StrokeThickness="1"/>
                    <Ellipse x:Name="HandleTopRight" 
                            Width="12" Height="12" 
                            Fill="White" 
                            Stroke="Black" 
                            StrokeThickness="1"/>
                    <Ellipse x:Name="HandleBottomLeft" 
                            Width="12" Height="12" 
                            Fill="White" 
                            Stroke="Black" 
                            StrokeThickness="1"/>
                    <Ellipse x:Name="HandleBottomRight" 
                            Width="12" Height="12" 
                            Fill="White" 
                            Stroke="Black" 
                            StrokeThickness="1"/>
                </Canvas>
            </Grid>
        </Border>

        <!-- Footer with info and buttons -->
        <Grid Grid.Row="2" Padding="20,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock x:Name="CropSizeText" 
                          Text="Crop: 0×0" 
                          FontWeight="SemiBold"/>
                <TextBlock x:Name="TargetSizeText" 
                          Text="Target: 600×722" 
                          Opacity="0.7" 
                          Margin="0,4,0,0"/>
                <TextBlock x:Name="InfoText" 
                          Text="Drag to move • Drag corners to resize" 
                          Opacity="0.6" 
                          FontSize="12" 
                          Margin="0,4,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       Spacing="8">
                <Button x:Name="SkipButton" 
                       Content="Skip" 
                       Click="SkipButton_Click"
                       MinWidth="100"/>
                <Button x:Name="ApplyButton" 
                       Content="Apply" 
                       Style="{StaticResource AccentButtonStyle}"
                       Click="ApplyButton_Click"
                       MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

<UserControl
    x:Class="FlairX_Mod_Manager.Pages.ImagePreviewUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">
    
    <Grid x:Name="MainGrid" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        
        <!-- Image Preview Area - full space -->
        <Grid Margin="24" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <!-- Coordinate field for tilt calculation -->
            <Grid x:Name="ImageCoordinateField" 
                  Background="Transparent"
                  PointerEntered="ImageCoordinateField_PointerEntered"
                  PointerExited="ImageCoordinateField_PointerExited">
                
                <!-- Content root with margin for 10% smaller -->
                <Grid x:Name="ImageContentRoot" Margin="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Loading Progress Bar -->
                    <ProgressBar x:Name="ImageLoadingBar"
                                 Minimum="0" Maximum="100" Value="0"
                                 Width="200"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Visibility="Collapsed"/>
                    <Border x:Name="ImageBorder" CornerRadius="12" Opacity="1">
                        <Border CornerRadius="8">
                            <Image x:Name="PreviewImage" Stretch="Uniform"/>
                        </Border>
                    </Border>
                </Grid>
                
                <!-- Left Navigation Button -->
                <Border x:Name="PrevImageButton" Width="44" Height="44" 
                        VerticalAlignment="Center" HorizontalAlignment="Left"
                        Margin="24,0,0,0" Visibility="Collapsed"
                        CornerRadius="12"
                        Background="{ThemeResource LauncherAcrylicBrush}"
                        PointerPressed="PrevImageButton_Click">
                    <FontIcon Glyph="&#xE76B;" FontSize="18" 
                              Foreground="{ThemeResource ButtonForeground}" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Right Navigation Button -->
                <Border x:Name="NextImageButton" Width="44" Height="44" 
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,24,0" Visibility="Collapsed"
                        CornerRadius="12"
                        Background="{ThemeResource LauncherAcrylicBrush}"
                        PointerPressed="NextImageButton_Click">
                    <FontIcon Glyph="&#xE76C;" FontSize="18" 
                              Foreground="{ThemeResource ButtonForeground}" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Image Counter - positioned over image for acrylic effect -->
                <Border Background="{ThemeResource LauncherAcrylicBrush}" 
                        CornerRadius="12" Padding="12,6" 
                        VerticalAlignment="Bottom" HorizontalAlignment="Center"
                        Margin="0,0,0,60"
                        x:Name="ImageCounterBorder" Visibility="Collapsed">
                    <TextBlock x:Name="ImageCounterText" Text="1 / 1" FontSize="14" 
                               Foreground="{ThemeResource ButtonForeground}"/>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Close button floating in corner - on top of everything -->
        <Button x:Name="CloseButton" Width="48" Height="48" 
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="24,24,0,0"
                Click="CloseButton_Click"
                PointerEntered="CloseButton_PointerEntered" 
                PointerExited="CloseButton_PointerExited">
            <FontIcon x:Name="CloseIcon" Glyph="&#xE711;" FontSize="20">
                <FontIcon.RenderTransform>
                    <ScaleTransform x:Name="CloseIconScale" ScaleX="1" ScaleY="1"/>
                </FontIcon.RenderTransform>
            </FontIcon>
        </Button>
    </Grid>
</UserControl>

<UserControl
    x:Class="FlairX_Mod_Manager.Pages.ModDetailUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlairX_Mod_Manager.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    mc:Ignorable="d">
    
    <Grid Margin="24" x:Name="MainGrid" PointerPressed="MainGrid_PointerPressed" PointerReleased="MainGrid_PointerReleased" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Back button (right arrow to close panel) -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,16">
            <Button x:Name="BackButton" Width="48" Height="48" Click="BackButton_Click" VerticalAlignment="Center"
                    PointerEntered="BackButton_PointerEntered" PointerExited="BackButton_PointerExited">
                <FontIcon x:Name="BackIcon" Glyph="&#xE72A;" FontSize="20">
                    <FontIcon.RenderTransform>
                        <ScaleTransform x:Name="BackIconScale" ScaleX="1" ScaleY="1"/>
                    </FontIcon.RenderTransform>
                </FontIcon>
            </Button>
            <Button x:Name="OpenFolderButton" Width="48" Height="48" Click="OpenFolderButton_Click" VerticalAlignment="Center" Margin="8,0,0,0"
                    PointerEntered="OpenFolderButton_PointerEntered" PointerExited="OpenFolderButton_PointerExited">
                <FontIcon x:Name="OpenFolderIcon" Glyph="&#xE838;" FontSize="20">
                    <FontIcon.RenderTransform>
                        <ScaleTransform x:Name="OpenFolderIconScale" ScaleX="1" ScaleY="1"/>
                    </FontIcon.RenderTransform>
                </FontIcon>
            </Button>
            <TextBlock x:Name="ModDetailTitle" Text="Mod Details" FontSize="24" FontWeight="Bold" Margin="16,0,16,0" VerticalAlignment="Center"/>
            <TextBox x:Name="ModVersionTextBox" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" MinWidth="100" MaxWidth="200" PlaceholderText="Version" TextChanged="ModVersionTextBox_TextChanged" BorderThickness="0" Background="Transparent" Padding="0" Margin="0,2,0,0"/>
        </StackPanel>
        
        <!-- Content exactly copied from ModDetailPage -->
        <Grid Grid.Row="1" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="0"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="*" MinWidth="420"/>
            </Grid.ColumnDefinitions>
            <!-- Image Container with overlay buttons -->
            <Viewbox Grid.Column="0" MaxWidth="700" MaxHeight="700" Stretch="Uniform" VerticalAlignment="Top" HorizontalAlignment="Left">
                <!-- Main container -->
                <Grid Width="700" Height="700">
                    <!-- Coordinate field for tilt calculation - behind content -->
                    <Grid x:Name="ModImageCoordinateField" 
                          Width="700" Height="700" 
                          Background="Transparent"
                          PointerEntered="ModImageCoordinateField_PointerEntered"
                          PointerExited="ModImageCoordinateField_PointerExited" />
                    
                    <!-- Content root with larger margin for stable hover - this gets animated -->
                    <Grid x:Name="ModImageContentRoot" Margin="25" IsHitTestVisible="False">
                        <Border x:Name="ModImageBorder" CornerRadius="12" BorderThickness="15" BorderBrush="{ThemeResource TileBorderBrush}">
                        <Border CornerRadius="8">
                            <Image x:Name="ModImage" Stretch="Uniform"/>
                        </Border>
                    </Border>
                    
                    </Grid>
                    
                    <!-- Navigation buttons - outside content root but positioned to look like they're inside -->
                    <!-- Left Navigation Button - Overlay (XXMI Launcher Style) -->
                    <Border x:Name="PrevImageButton" Width="48" Height="48" 
                            VerticalAlignment="Bottom" HorizontalAlignment="Left"
                            Margin="50,0,0,50" Visibility="Collapsed"
                            CornerRadius="12"
                            Background="{ThemeResource LauncherAcrylicBrush}"
                            PointerPressed="PrevImageButton_Click"
                            PointerEntered="ModImageCoordinateField_PointerEntered"
                            PointerExited="ModImageCoordinateField_PointerExited"
                            PointerMoved="ModImageCoordinateField_PointerMoved">
                        <FontIcon Glyph="&#xE76B;" FontSize="20" 
                                  Foreground="{ThemeResource ButtonForeground}" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Right Navigation Button - Overlay (XXMI Launcher Style) -->
                    <Border x:Name="NextImageButton" Width="48" Height="48" 
                            VerticalAlignment="Bottom" HorizontalAlignment="Right"
                            Margin="0,0,50,50" Visibility="Collapsed"
                            CornerRadius="12"
                            Background="{ThemeResource LauncherAcrylicBrush}"
                            PointerPressed="NextImageButton_Click"
                            PointerEntered="ModImageCoordinateField_PointerEntered"
                            PointerExited="ModImageCoordinateField_PointerExited"
                            PointerMoved="ModImageCoordinateField_PointerMoved">
                        <FontIcon Glyph="&#xE76C;" FontSize="20" 
                                  Foreground="{ThemeResource ButtonForeground}" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Image Counter - Centered (XXMI Launcher Style) -->
                    <Border Background="{ThemeResource LauncherAcrylicBrush}" 
                            CornerRadius="12" Padding="8,4" Margin="0,0,0,50" 
                            VerticalAlignment="Bottom" HorizontalAlignment="Center"
                            x:Name="ImageCounterBorder" Visibility="Collapsed"
                            PointerEntered="ModImageCoordinateField_PointerEntered"
                            PointerExited="ModImageCoordinateField_PointerExited"
                            PointerMoved="ModImageCoordinateField_PointerMoved">
                        <TextBlock x:Name="ImageCounterText" Text="1 / 1" FontSize="12" 
                                   Foreground="{ThemeResource ButtonForeground}"/>
                    </Border>
                    

                </Grid>
            </Viewbox>
            <Grid Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="DetailsGrid" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Date Checked -->
                    <TextBlock x:Name="ModDateCheckedLabel" Text="Date Checked:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0,0,0,2"/>
                    <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" MinWidth="110" MaxWidth="250" Width="250" Height="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="32"/>
                        </Grid.ColumnDefinitions>
                        <CalendarDatePicker x:Name="ModDateCheckedPicker" Grid.Column="0" Margin="0,0,0,0" Width="210" Height="32" DateChanged="ModDateCheckedPicker_DateChanged" PlaceholderText="Select date"/>
                        <Border Grid.Column="1" Background="Transparent"/>
                        <Button x:Name="TodayDateCheckedButton" Grid.Column="2" Width="32" Height="32" Click="TodayDateCheckedButton_Click" Padding="0">
                            <FontIcon Glyph="&#xE823;" FontSize="16"/>
                        </Button>
                    </Grid>
                    <!-- Date Updated -->
                    <TextBlock x:Name="ModDateUpdatedLabel" Text="Date Updated:" FontWeight="Bold" Grid.Row="3" Grid.Column="0" Margin="0,0,0,2"/>
                    <Grid Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" MinWidth="110" MaxWidth="250" Width="250" Height="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="32"/>
                        </Grid.ColumnDefinitions>
                        <CalendarDatePicker x:Name="ModDateUpdatedPicker" Grid.Column="0" Margin="0,0,0,0" Width="210" Height="32" DateChanged="ModDateUpdatedPicker_DateChanged" PlaceholderText="Select date"/>
                        <Border Grid.Column="1" Background="Transparent"/>
                        <Button x:Name="TodayDateUpdatedButton" Grid.Column="2" Width="32" Height="32" Click="TodayDateUpdatedButton_Click" Padding="0">
                            <FontIcon Glyph="&#xE823;" FontSize="16"/>
                        </Button>
                    </Grid>
                    <!-- Author -->
                    <TextBlock x:Name="ModAuthorLabel" Text="Author:" FontWeight="Bold" Grid.Row="6" Grid.Column="0" Margin="0,0,0,2"/>
                    <TextBox x:Name="ModAuthorTextBox" Grid.Row="7" Grid.Column="0" Margin="0,0,0,0" TextAlignment="Left" HorizontalAlignment="Left" MinWidth="110" MaxWidth="250" Width="250" Height="32" TextChanged="ModAuthorTextBox_TextChanged"/>
                    <!-- URL -->
                    <TextBlock x:Name="ModUrlLabel" Text="URL:" FontWeight="Bold" Visibility="Visible" Grid.Row="9" Grid.Column="0" Margin="0,0,0,2" HorizontalAlignment="Left"/>
                    <Grid Grid.Row="10" Grid.Column="0" HorizontalAlignment="Left" MinWidth="110" MaxWidth="250" Width="250" Height="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="32"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ModUrlTextBox" Grid.Column="0" Margin="0,0,0,0" TextAlignment="Left" HorizontalAlignment="Stretch" Height="32" TextChanged="ModUrlTextBox_TextChanged"/>
                        <Border Grid.Column="1" Background="Transparent"/>
                        <Button x:Name="OpenUrlButton" Grid.Column="2" Click="OpenUrlButton_Click" Width="32" Height="32" Background="{ThemeResource ButtonBackground}" BorderBrush="{ThemeResource ButtonBorderBrush}" BorderThickness="1" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE71B;" FontSize="16"/>
                        </Button>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" VerticalAlignment="Stretch" Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="ModHotkeysLabel" Text="Hotkeys: " FontWeight="Bold" Grid.Row="0" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" Width="300" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Empty header row for spacing -->
                            <TextBlock Text="" Grid.Row="0" Grid.Column="0"/>
                            <TextBlock Text="" Grid.Row="0" Grid.Column="2"/>
                            <ItemsControl x:Name="ModHotkeysList" Grid.Row="1" Grid.ColumnSpan="3">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="125"/>
                                                <ColumnDefinition Width="10"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Key}" FontFamily="{StaticResource AppFontFamily}" FontWeight="Bold" FontSize="16" Grid.Column="0" TextAlignment="Left"/>
                                            <TextBlock Grid.Column="1"/>
                                            <TextBlock Text="{Binding Description}" FontFamily="{StaticResource AppFontFamily}" FontSize="16" Grid.Column="2" TextAlignment="Left"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
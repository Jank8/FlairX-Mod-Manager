<UserControl
    x:Class="FlairX_Mod_Manager.Pages.ModDetailUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlairX_Mod_Manager.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">
    
    <Grid Margin="24" x:Name="MainGrid" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Back button -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,24">
            <Button x:Name="BackButton" Width="48" Height="48" Click="BackButton_Click" VerticalAlignment="Center"
                    PointerEntered="BackButton_PointerEntered" PointerExited="BackButton_PointerExited">
                <FontIcon x:Name="BackIcon" Glyph="&#xE72A;" FontSize="20">
                    <FontIcon.RenderTransform>
                        <ScaleTransform x:Name="BackIconScale" ScaleX="1" ScaleY="1"/>
                    </FontIcon.RenderTransform>
                </FontIcon>
            </Button>
            <Button x:Name="OpenFolderButton" Width="48" Height="48" Click="OpenFolderButton_Click" VerticalAlignment="Center" Margin="8,0,0,0"
                    PointerEntered="OpenFolderButton_PointerEntered" PointerExited="OpenFolderButton_PointerExited">
                <FontIcon x:Name="OpenFolderIcon" Glyph="&#xE838;" FontSize="20">
                    <FontIcon.RenderTransform>
                        <ScaleTransform x:Name="OpenFolderIconScale" ScaleX="1" ScaleY="1"/>
                    </FontIcon.RenderTransform>
                </FontIcon>
            </Button>
            <TextBlock x:Name="ModDetailTitle" Text="Mod Details" FontSize="24" FontWeight="Bold" Margin="16,0,16,0" VerticalAlignment="Center"/>
            <TextBox x:Name="ModVersionTextBox" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" MinWidth="100" MaxWidth="200" PlaceholderText="Version" TextChanged="ModVersionTextBox_TextChanged" BorderThickness="0" Background="Transparent" Padding="0" Margin="0,2,0,0"/>
            
            <!-- NSFW badge -->
            <Border x:Name="NSFWBadge"
                    Background="#CCCC0000" 
                    CornerRadius="8" 
                    Padding="12,6" 
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE7B3;" FontSize="14" Foreground="White"/>
                    <TextBlock x:Name="NSFWBadgeText" Text="NSFW" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Content -->
        <Grid Grid.Row="1" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" 
                          VerticalAlignment="Stretch" Padding="0,0,0,12">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="8*" MaxWidth="1000"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Spacing="4" Margin="0,0,0,0" HorizontalAlignment="Stretch">

                    <!-- Image Section Header with Navigation -->
                    <Grid Margin="0,0,0,12">
                        <!-- Left Navigation Button -->
                        <Border x:Name="PrevImageButton" Width="36" Height="36" 
                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                Visibility="Collapsed"
                                CornerRadius="8"
                                Background="{ThemeResource LauncherAcrylicBrush}"
                                PointerPressed="PrevImageButton_Click">
                            <FontIcon Glyph="&#xE76B;" FontSize="14" 
                                      Foreground="{ThemeResource ButtonForeground}" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Preview Header (centered) -->
                        <TextBlock x:Name="ModPreviewHeader" Text="Preview" FontSize="20" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        
                        <!-- Right Navigation Button -->
                        <Border x:Name="NextImageButton" Width="36" Height="36" 
                                VerticalAlignment="Center" HorizontalAlignment="Right"
                                Visibility="Collapsed"
                                CornerRadius="8"
                                Background="{ThemeResource LauncherAcrylicBrush}"
                                PointerPressed="NextImageButton_Click">
                            <FontIcon Glyph="&#xE76C;" FontSize="14" 
                                      Foreground="{ThemeResource ButtonForeground}" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    
                    <!-- Image section with delete button -->
                    <Grid Margin="0,0,0,24">
                        <!-- Image container with max height constraint -->
                        <Grid MaxHeight="600" MaxWidth="1000" HorizontalAlignment="Center">
                        <!-- Coordinate field for tilt calculation -->
                        <Grid x:Name="ModImageCoordinateField" 
                              Background="Transparent"
                              PointerEntered="ModImageCoordinateField_PointerEntered"
                              PointerExited="ModImageCoordinateField_PointerExited"
                              PointerPressed="ModImage_PointerPressed" />
                        
                        <!-- Content root with margin for stable hover -->
                        <Grid x:Name="ModImageContentRoot" Margin="20" IsHitTestVisible="False" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Main image -->
                            <Border x:Name="ModImageBorder" CornerRadius="12">
                                <Border CornerRadius="8">
                                    <Image x:Name="ModImage" Stretch="Uniform"/>
                                </Border>
                            </Border>
                        </Grid>
                        </Grid>
                        
                        <!-- Image Counter -->
                        <Border Background="{ThemeResource LauncherAcrylicBrush}" 
                                CornerRadius="12" Padding="8,4" 
                                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                Margin="0,0,0,40"
                                x:Name="ImageCounterBorder" Visibility="Collapsed">
                            <TextBlock x:Name="ImageCounterText" Text="1 / 1" FontSize="12" 
                                       Foreground="{ThemeResource ButtonForeground}"/>
                        </Border>
                        
                        <!-- Delete Preview Button positioned directly below image -->
                        <Border x:Name="DeletePreviewButton" 
                                Width="36" Height="36"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="30,0,0,-24"
                                CornerRadius="8"
                                Background="{ThemeResource LauncherAcrylicBrush}"
                                PointerPressed="DeletePreviewButton_Click"
                                PointerEntered="DeletePreviewButton_PointerEntered"
                                PointerExited="DeletePreviewButton_PointerExited"
                                Visibility="Collapsed">
                            <FontIcon x:Name="DeletePreviewIcon" Glyph="&#xE74D;" FontSize="14" 
                                      Foreground="{ThemeResource ButtonForeground}" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Add Screenshot Capture Button positioned directly below image -->
                        <Border x:Name="CaptureScreenshotButton" 
                                Width="36" Height="36"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="-30,0,0,-24"
                                CornerRadius="8"
                                Background="{ThemeResource LauncherAcrylicBrush}"
                                PointerPressed="CaptureScreenshotButton_Click"
                                PointerEntered="CaptureScreenshotButton_PointerEntered"
                                PointerExited="CaptureScreenshotButton_PointerExited"
                                Visibility="Collapsed">
                            <FontIcon x:Name="CaptureScreenshotIcon" Glyph="&#xE710;" FontSize="14" 
                                      Foreground="{ThemeResource ButtonForeground}" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    
                    <!-- Details Section -->
                    <TextBlock x:Name="ModDetailsHeader" Text="Details" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    
                    <!-- Date Checked -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE8BF;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="ModDateCheckedLabel" Text="Date Checked" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="ModDateCheckedDesc" Text="When you last verified this mod" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                <CalendarDatePicker x:Name="ModDateCheckedPicker" Width="220" DateChanged="ModDateCheckedPicker_DateChanged" PlaceholderText="Select date"/>
                                <Button x:Name="TodayDateCheckedButton" Width="32" Height="32" Click="TodayDateCheckedButton_Click" Padding="0" ToolTipService.ToolTip="Set to today">
                                    <FontIcon Glyph="&#xE823;" FontSize="16"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Date Updated -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE787;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="ModDateUpdatedLabel" Text="Last Update" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="ModDateUpdatedDesc" Text="When this mod was last updated" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                <CalendarDatePicker x:Name="ModDateUpdatedPicker" Width="220" DateChanged="ModDateUpdatedPicker_DateChanged" PlaceholderText="Select date"/>
                                <Button x:Name="TodayDateUpdatedButton" Width="32" Height="32" Click="TodayDateUpdatedButton_Click" Padding="0" ToolTipService.ToolTip="Set to today">
                                    <FontIcon Glyph="&#xE823;" FontSize="16"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Author -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE77B;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="ModAuthorLabel" Text="Author" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="ModAuthorDesc" Text="Creator of this mod" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <TextBox x:Name="ModAuthorTextBox" Grid.Column="3" Width="260" TextChanged="ModAuthorTextBox_TextChanged" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- URL -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE71B;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="ModUrlLabel" Text="URL" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="ModUrlDesc" Text="Link to mod page" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                <TextBox x:Name="ModUrlTextBox" Width="220" TextChanged="ModUrlTextBox_TextChanged" GotFocus="ModUrlTextBox_GotFocus" LostFocus="ModUrlTextBox_LostFocus"/>
                                <Button x:Name="OpenUrlButton" Click="OpenUrlButton_Click" Width="32" Height="32" Padding="0" ToolTipService.ToolTip="Open URL">
                                    <FontIcon Glyph="&#xE71B;" FontSize="16"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- NSFW Checkbox -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE7B3;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="ModNSFWLabel" Text="NSFW Content" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="ModNSFWDesc" Text="Mark this mod as adult content" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <CheckBox x:Name="ModNSFWCheckBox" 
                                      Grid.Column="3"
                                      Checked="ModNSFWCheckBox_Checked"
                                      Unchecked="ModNSFWCheckBox_Unchecked"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- StatusKeeper Sync Checkbox -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE895;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="ModStatusKeeperSyncLabel" Text="StatusKeeper Sync" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="ModStatusKeeperSyncDesc" Text="Synchronize mod status with game settings" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <CheckBox x:Name="ModStatusKeeperSyncCheckBox" 
                                      Grid.Column="3"
                                      Checked="ModStatusKeeperSyncCheckBox_Checked"
                                      Unchecked="ModStatusKeeperSyncCheckBox_Unchecked"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Mod Broken Checkbox -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xEA92;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="ModBrokenLabel" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="ModBrokenDesc" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <CheckBox x:Name="ModBrokenCheckBox" 
                                      Grid.Column="3"
                                      Checked="ModBrokenCheckBox_Checked"
                                      Unchecked="ModBrokenCheckBox_Unchecked"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Update Available Notification -->
                    <TextBlock x:Name="UpdateAvailableNotification" 
                               Text="" 
                               Foreground="{ThemeResource SystemAccentColor}"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Visibility="Collapsed"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="0,8,0,0"/>
                    
                    <!-- Hotkeys Section -->
                    <StackPanel x:Name="HotkeysSection" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,24,0,12">
                            <TextBlock x:Name="ModHotkeysLabel" Text="Hotkeys" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Button x:Name="RestoreDefaultHotkeysButton" Click="RestoreDefaultHotkeysButton_Click" 
                                    Width="32" Height="32" Margin="12,0,0,0" Padding="0">
                                <FontIcon Glyph="&#xE777;" FontSize="16"/>
                            </Button>
                        </StackPanel>
                        
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="16" 
                                Margin="0,0,0,24">
                            <StackPanel x:Name="ModHotkeysPanel" Spacing="4"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Hidden DetailsGrid for compatibility -->
                    <Grid x:Name="DetailsGrid" Visibility="Collapsed"/>
                    
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
        

    </Grid>
</UserControl>

<UserControl
    x:Class="FlairX_Mod_Manager.Pages.PresetsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlairX_Mod_Manager.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">
    
    <Grid Margin="24" x:Name="MainGrid" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Back button -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,24">
            <Button x:Name="BackButton" Width="48" Height="48" Click="BackButton_Click" VerticalAlignment="Center"
                    PointerEntered="BackButton_PointerEntered" PointerExited="BackButton_PointerExited">
                <FontIcon x:Name="BackIcon" Glyph="&#xE711;" FontSize="20">
                    <FontIcon.RenderTransform>
                        <ScaleTransform x:Name="BackIconScale" ScaleX="1" ScaleY="1"/>
                    </FontIcon.RenderTransform>
                </FontIcon>
            </Button>
            <TextBlock x:Name="PresetsTitle" Text="Presets" FontSize="24" FontWeight="Bold" Margin="16,0,16,0" VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*" MaxWidth="1000"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="1" Spacing="0" HorizontalAlignment="Stretch">
                    
                    <!-- Load Preset Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE8B7;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="LoadPresetLabel" FontWeight="SemiBold" FontSize="14"/>
                                <ComboBox x:Name="PresetComboBox" Width="300" Margin="0,8,0,0" SelectionChanged="PresetComboBox_SelectionChanged" HorizontalAlignment="Left"/>
                            </StackPanel>
                            
                            <Button Grid.Column="3" x:Name="LoadPresetButton" Click="LoadPresetButton_Click" MinWidth="80" VerticalAlignment="Center">
                                <TextBlock x:Name="LoadPresetButtonText"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Save Preset Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE74E;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="SavePresetLabel" FontWeight="SemiBold" FontSize="14"/>
                                <TextBox x:Name="PresetNameTextBox" Width="300" Margin="0,8,0,0" HorizontalAlignment="Left"/>
                            </StackPanel>
                            
                            <Button Grid.Column="3" x:Name="SavePresetButton" Click="SavePresetButton_Click" MinWidth="80" VerticalAlignment="Center" Style="{StaticResource AccentButtonStyle}">
                                <TextBlock x:Name="SavePresetButtonText"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Delete Preset Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" Glyph="&#xE74D;" FontSize="20" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock x:Name="DeletePresetLabel" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="DeletePresetDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <Button Grid.Column="3" x:Name="DeletePresetButton" Click="DeletePresetButton_Click" MinWidth="80" VerticalAlignment="Center">
                                <TextBlock x:Name="DeletePresetButtonText"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Preset Mods List Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock x:Name="PresetModsHeader" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <ListView x:Name="PresetModsListView" MaxHeight="400" />
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
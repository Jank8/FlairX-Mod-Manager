<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FlairX_Mod_Manager.Pages.StatusKeeperBackupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
    
    <StackPanel Spacing="0" HorizontalAlignment="Stretch">
        
        <!-- Create Backup Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xEA35;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="CreateBackupLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="CreateBackupDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <ProgressBar Grid.Column="3" x:Name="CreateBackupProgressBar" Width="130" IsIndeterminate="True" Visibility="Collapsed" ShowPaused="False" ShowError="False" />
                
                <Button Grid.Column="5" x:Name="CreateBackupButton" 
                        MinWidth="80"
                        Height="36" 
                        Padding="12,6"
                        Click="CreateBackupButton_Click"
                        Style="{StaticResource AccentButtonStyle}">
                    <TextBlock x:Name="CreateBackupButtonText"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Check Backup Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xF0B5;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="CheckBackupLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="CheckBackupDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <ProgressBar Grid.Column="3" x:Name="CheckBackupProgressBar" Width="130" IsIndeterminate="True" Visibility="Collapsed" ShowPaused="False" ShowError="False" />
                
                <Button Grid.Column="5" x:Name="CheckBackupButton" 
                        MinWidth="80"
                        Height="36" 
                        Padding="12,6"
                        Click="CheckBackupButton_Click">
                    <TextBlock x:Name="CheckBackupButtonText"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Restore Backup Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE8EB;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="RestoreBackupLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="RestoreBackupDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="3" x:Name="RestoreBackupButton" 
                        MinWidth="80"
                        Height="36" 
                        Padding="12,6"
                        Click="RestoreBackupButton_Click">
                    <TextBlock x:Name="RestoreBackupButtonText"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Delete Backups Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE74D;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="DeleteBackupsLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="DeleteBackupsDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="3" x:Name="DeleteBackupsButton" 
                        MinWidth="80"
                        Height="36" 
                        Padding="12,6"
                        Click="DeleteBackupsButton_Click">
                    <TextBlock x:Name="DeleteBackupsButtonText"/>
                </Button>
            </Grid>
        </Border>
        
    </StackPanel>
</Page>

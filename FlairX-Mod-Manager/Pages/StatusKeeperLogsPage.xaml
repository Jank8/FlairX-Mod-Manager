<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FlairX_Mod_Manager.Pages.StatusKeeperLogsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
    
    <StackPanel Spacing="0" HorizontalAlignment="Stretch">
        
        <!-- Logging Toggle Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE7BA;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="LoggingLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="LoggingDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                    <TextBlock x:Name="LoggingToggleLabel" VerticalAlignment="Center" Opacity="0.8"/>
                    <ToggleSwitch x:Name="LoggingToggle" Toggled="LoggingToggle_Toggled" OnContent="" OffContent="" MinWidth="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Open Log Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE8A7;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="OpenLogLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="OpenLogDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="3" x:Name="OpenLogButton" 
                        MinWidth="80"
                        Height="36" 
                        Padding="12,6"
                        Click="OpenLogButton_Click">
                    <TextBlock x:Name="OpenLogButtonText"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Clear Log Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE74D;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="ClearLogLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="ClearLogDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="3" x:Name="ClearLogButton" 
                        MinWidth="80"
                        Height="36" 
                        Padding="12,6"
                        Click="ClearLogButton_Click">
                    <TextBlock x:Name="ClearLogButtonText"/>
                </Button>
            </Grid>
        </Border>
        
    </StackPanel>
</Page>

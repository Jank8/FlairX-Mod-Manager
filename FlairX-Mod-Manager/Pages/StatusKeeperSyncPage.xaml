<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FlairX_Mod_Manager.Pages.StatusKeeperSyncPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
    
    <StackPanel Spacing="0" HorizontalAlignment="Stretch">
        
        <!-- File Path Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE8A5;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="D3dxFilePathLabel" FontWeight="SemiBold" FontSize="14"/>
                    <BreadcrumbBar x:Name="D3dxFilePathBreadcrumb" Margin="0,4,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="3" x:Name="D3dxFilePathOpenButton" 
                        MinWidth="100"
                        Click="D3dxFilePathOpenButton_Click" 
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8B7;" FontSize="14"/>
                        <TextBlock x:Name="D3dxFilePathOpenButtonText"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Backup Confirmation Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE8C8;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="BackupConfirmationLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="BackupConfirmationDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                    <TextBlock x:Name="BackupConfirmationToggleLabel" VerticalAlignment="Center" Opacity="0.8"/>
                    <ToggleSwitch x:Name="BackupConfirmationToggle" Toggled="BackupConfirmationToggle_Toggled" OnContent="" OffContent="" MinWidth="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Dynamic Sync Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE895;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="DynamicSyncLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="DynamicSyncDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                    <TextBlock x:Name="DynamicSyncToggleLabel" VerticalAlignment="Center" Opacity="0.8"/>
                    <ToggleSwitch x:Name="DynamicSyncToggle" Toggled="DynamicSyncToggle_Toggled" OnContent="" OffContent="" MinWidth="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Manual Sync Card -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" Glyph="&#xE895;" FontSize="20" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="ManualSyncLabel" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="ManualSyncDescription" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <ProgressBar x:Name="ManualSyncProgressBar" Width="130" IsIndeterminate="True" Visibility="Collapsed" ShowPaused="False" ShowError="False" Margin="0,0,8,0" />
                    <Button x:Name="ManualSyncButton" 
                            MinWidth="80"
                            Click="ManualSyncButton_Click"
                            Style="{StaticResource AccentButtonStyle}">
                        <TextBlock x:Name="ManualSyncButtonText"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
    </StackPanel>
</Page>
